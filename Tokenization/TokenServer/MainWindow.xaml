<Window x:Class="TokenServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtDisplay" IsReadOnly="True" TextWrapping="Wrap" Width="497" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnExportCardID" Content="Export By CardID" HorizontalAlignment="Left" Margin="10,2.561,0,0" VerticalAlignment="Top" Width="107" Click="btnExportCardID_Click" Grid.Row="1"/>
        <Button x:Name="btnExportToken" Content="Export By Token" HorizontalAlignment="Left" Margin="198,2.561,0,0" VerticalAlignment="Top" Width="107" Click="btnExportToken_Click" Grid.Row="1"/>
        <Button x:Name="btnSerialize" Content="Serialize" HorizontalAlignment="Left" Margin="400,2.561,0,0" VerticalAlignment="Top" Width="107" Click="btnSerialize_Click" Grid.Row="1"/>

    </Grid>
</Window>
